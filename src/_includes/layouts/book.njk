{% extends 'layouts/base.njk' %}
{% block content %}
<section class="">
  <div id="{{ title | slug }}" class="flex my-16 gap-x-8">
    <div id="{{ title | slug }}-info" class="w-2/3">
      <h2 id="{{ title | slug }}-title" class="mb-2 text-5xl !mt-0 font-bold leading-tight book-title">
        {{ title }}
      </h2>
      <h3 id="{{ title | slug }}=subtitle" class="mb-2 text-3xl font-bold text-gray-500 sm:text-3xl">{% book book.ISBN, "subtitle" %}</h3>
      <div  id="{{ title | slug }}-author" class="mt-4 mb-12 text-2xl leading-tight prose prose-xl ease-in-out book-attribution font-Asul">
        {% book book.ISBN, "author" %}
      </div>
      <div class="prose prose-xl">{% book book.ISBN, "description" %}</div>
      <aside class="px-6 py-6 mt-12 bg-blue-100 backdrop-blur-lg">{% book book.ISBN, "context" %}</aside>
    </div>
    <div id="{{ title | slug }}-image" class="flex flex-col w-1/3 px-6 my-6 not-prose">
      {% book book.ISBN, "cover" %}
      {% book book.ISBN, "purchase", "sure!" %}
    </div>
  </div>
</section>
{% endblock %}