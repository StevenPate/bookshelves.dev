{% extends 'layouts/base.njk' %}

{% block content %}
<article>
<section title="About the '{{ title }}' shelf" class="px-8 md:px-16 lg:px-32">
  <article>
  <div class="grid justify-center grid-cols-1 prose prose-xl">
  <h1 class="mb-4">{{ title or metadata.title | safe }}</h1>
  {% if description %}<div class="mt-4 mb-4 text-2xl font-semibold text-slate-500">{{ description | markdown | safe }}</div>{% endif %}
  </div>
  <div class="prose prose-lg">
  {{ content | markdown | safe }}
  {% if attribution %}<div class="flex flex-row-reverse"><div class="text-xl italic">{{ attribution }}</div></div>{% endif %}
  </div>
  </article>
</section>
{% if sortByDescription %}
  <section class="">
    {% shelf page.fileSlug, "full::description" %}
    <div class="px-8 md:px-16 lg:px-32">
    <h3 class="prose prose-xl">Other titles on this shelf:</h3>
    {% shelf page.fileSlug, "cover::no-description" %}
    </div>
  </section>
{% else %}
  <section>
    {% shelf page.fileSlug, "full" %}
  </section>
{%endif%}
</article> 

<div class="px-8 mt-12 md:px-16 lg:px-32">
  <p class="prose prose-base">This shelf was updated on {{ page.date | readableDate }}.</p>
  <p class="w-full prose prose-base"><a href="{{ site.github }}/blame/main/{{ page.inputPath }}">See the history of updates to this page</a> or <a href="/{{page.fileSlug}}.json">access the file as json</a>.
</div>
{% endblock %}
