{% extends 'layouts/base.njk' %}

{% block content %}
<article>
<section title="About the '{{ title }}' shelf" class="prose prose-xl">
  <article>
  <h1>{{ title or metadata.title }}</h1>
  {{ content | safe }}
  </article>
</section>
<section>
  {% for book in books %}
    {% book book.ISBN, 'full', null, 'purchase', '', page.inputPath %}
  {% endfor %}
</section>
</article>
{% endblock %}
