{% extends 'layouts/base.njk' %}

{% block content %}
<article>
<section title="About the '{{ title }}' shelf" class="px-8 prose prose-xl">
  <article>
  <div class="grid justify-center grid-cols-1">
  <h1>{{ title or metadata.title | safe }}</h1>
  </div>
  {{ content | safe }}
  </article>
</section>
{% if sortByDescription %}
  <section class="">
    {% shelf page.fileSlug, "full::description" %}
    <h3>Other titles on this shelf:</h3>
    {% shelf page.fileSlug, "cover::no-description" %}
  </section>
{% else %}
  <section>
    {% shelf page.fileSlug, "full" %}
  </section>
{%endif%}
</article> 

<div class="prose prose-base">
  <p>This shelf was updated on {{ page.date | readableDate }}.</p>
  <p><a href="{{ site.github }}/blame/main/{{ page.inputPath }}">See the history of updates to this page</a> or <a href="/{{page.fileSlug}}.json">access the file as json</a>.
</div>
{% endblock %}
